{
  "manifest_version": 3,
  "name": "Google Account Switcher",
  "version": "1.0",
  "description": "Switch between Google accounts",
  "permissions": ["activeTab"],
  "icons": {
    "48": "icon.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "default_title": "Switch Google Account",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.google.com/*"],
      "js": ["content.js"]
    }
  ]
}
